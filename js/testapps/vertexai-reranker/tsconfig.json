{
  "compileOnSave": true,
  "include": ["src"],
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
