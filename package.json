{
  "name": "genkit",
  "private": true,
  "version": "0.0.5",
  "scripts": {
    "format": "(prettier . --write) && (ts-node scripts/copyright.ts)",
    "format:check": "(prettier . --check) && (ts-node scripts/copyright.ts --check)",
    "build:all": "npm-run-all build:js build:genkit-tools",
    "build:js": "cd js && npm i && npm run build:all",
    "build:genkit-tools": "cd genkit-tools && npm i && npm run build",
    "npm-install-js": "cd js && npm install",
    "npm-install-genkit-tools": "cd genkit-tools && npm install",
    "link-genkit-tools": "cd genkit-tools && npm link",
    "setup": "npm-run-all npm-install-js npm-install-genkit-tools build:all link-genkit-tools",
    "pack:all": "rm -r dist || true && mkdir dist && npm-run-all pack:js pack:tools dist:zip",
    "pack:tools": "cd genkit-tools && npm run pack:all",
    "pack:js": "cd js && npm run pack:all",
    "dist:zip": "cd dist && zip genkit-dist.zip *.tgz",
    "test:all": "npm-run-all test:js test:genkit-tools",
    "test:js": "cd js && npm i && npm run test:all",
    "test:genkit-tools": "cd genkit-tools && npm i && npm run test:all",
    "test:e2e": "npm run build:all && npm run pack:all && cd tests && npm run test"
  },
  "pre-commit": [
    "format:check"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-css-order": "2.0.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "ts-node": "^10.9.2"
  }
}
